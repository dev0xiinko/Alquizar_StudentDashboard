@page
@model Alquizar_StudentDashboard.Pages.DashboardModel
@{
    ViewData["Title"] = "Student Dashboard";
}

@* Ulohan sa dashboard *@
<h1>@ViewData["Title"]</h1>

@* Welcome message *@
<p>Welcome to the student dashboard. Below is the performance summary:</p>

@* I-check kung naay students *@
@if (Model.StudentVM.Students is null || !Model.StudentVM.Students.Any())
{
    <p>No students found.</p>
}
else
{
    <div class="row mb-4">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Class Statistics</h3>
                </div>
                <div class="card-body">
                    <p>Total Students: @Model.StudentVM.Students.Count</p>
                    <p>Class Average: @Model.StudentVM.Average.ToString("F2")</p>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Student List</h3>
                </div>
                <div class="card-body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Score</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var student in Model.StudentVM.Students)
                            {
                                <tr>
                                    <td>@student.Name</td>
                                    <td>@student.Score</td>
                                    <td>
                                        <span class="badge bg-@(student.Score >= 95 ? "success" : 
                                                               student.Score >= 85 ? "primary" :
                                                               student.Score >= 75 ? "info" : "danger")">
                                            @student.Remarks
                                        </span>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
}
